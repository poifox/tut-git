{
  "name": "tut-git",
  "version": "1.0.0",
  "description": "Este es el el README de mi repo de tut-git.",
  "main": "index.js",
  "scripts": {
    "watch:dev": "nodemon",
    "dev": "NODE_ENV=development npm-run-all build server",
    "server": "node ./dist/index.js",
    "test": "jest",
    "prod": "NODE_ENV=production npm-run-all build server",
    "transpile": "babel ./backend --out-dir dist",
    "clean": "rimraf dist",
    "build": "npm-run-all clean transpile",
    "start": "npm run prod"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "backend/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "**.test.js",
      "**.spec.js"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "express": "^4.17.1",
    "mongoose": "^6.0.7",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "babel-jest": "^27.2.1",
    "jest": "^27.2.1",
    "nodemon": "^2.0.12"
  }
}
